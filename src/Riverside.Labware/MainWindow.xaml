                    QueryIcon="Find"
                    UseSystemFocusVisuals="False" />
                <TreeView
                    x:Name="VMsAndItems"
                    Margin="0,80,0,0"
                    CanDragItems="False"
                    CanReorderItems="False"
                    IsTabStop="False"
                    UseSystemFocusVisuals="False">
                    <TreeView.RootNodes>
                        <TreeViewNode Content="My Computer" IsExpanded="True">
                            <TreeViewNode.Children>
                                <TreeViewNode Content="LabwareOS" />
                            </TreeViewNode.Children>
                        </TreeViewNode>
                    </TreeView.RootNodes>
                </TreeView>
            </Grid>
            <sizers:ContentSizer
                x:Name="Sizer"
                Width="12"
                Margin="200,48,0,32"
                HorizontalAlignment="Left"
                BorderBrush="{StaticResource ControlStrokeColorSecondaryBrush}"
                BorderThickness="0,1,0,0"
                CornerRadius="0"
                TargetControl="{x:Bind LibraryPanel}" />
            <Grid
                x:Name="TabsGrid"
                Margin="212,48,0,32"
                BorderBrush="{StaticResource ControlStrokeColorSecondaryBrush}"
                BorderThickness="1,1,0,0"
                CornerRadius="0">
                <TabView
                    x:Name="TabsView"
                    VerticalAlignment="Stretch"
                    IsAddTabButtonVisible="False"
                    TabWidthMode="SizeToContent">
                    <TabView.Resources>
                        <ResourceDictionary>
                            <SolidColorBrush x:Key="TabViewItemHeaderBackgroundSelected" Color="Transparent" />
                        </ResourceDictionary>
                    </TabView.Resources>
                    <TabView.TabItems>
                        <TabViewItem
                            x:Uid="MyComputerTab"
                            Header="My Computer"
                            IsTabStop="False"
                            UseSystemFocusVisuals="False">
                            <TabViewItem.IconSource>
                                <SymbolIconSource Symbol="Placeholder" />
                            </TabViewItem.IconSource>
                            <pages:MyComputerPage />
                        </TabViewItem>
                        <TabViewItem
                            x:Uid="HomeTab"
                            Header="Home"
                            IsSelected="True"
                            IsTabStop="False"
                            UseSystemFocusVisuals="False">
                            <TabViewItem.IconSource>
                                <SymbolIconSource Symbol="Home" />
                            </TabViewItem.IconSource>
                            <pages:HomePage />
                        </TabViewItem>
                        <TabViewItem
                            x:Uid="VMTab"
                            Header="LabwareOS"
                            IsTabStop="False"
                            UseSystemFocusVisuals="False">
                            <TabViewItem.IconSource>
                                <SymbolIconSource Symbol="Placeholder" />
                            </TabViewItem.IconSource>
                            <pages:VMPage />
                        </TabViewItem>
                    </TabView.TabItems>
                </TabView>
            </Grid>
            <Grid
                x:Name="FolderView"
                Height="147"
                Margin="202,0,0,32"
                VerticalAlignment="Bottom"
                BorderBrush="#69A1BF"
                BorderThickness="1,1,0,1"
                CornerRadius="4,0,0,4">
                <Grid Margin="0,2,2,2">
                    <TextBlock
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="No folder view virtual machines." />
                </Grid>
                <StackPanel
                    Grid.RowSpan="2"
                    Margin="0,1,1,0"
                    Padding="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
                    <Button
                        x:Name="HideFolderView"
                        Width="39"
                        Height="39"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="HideFolderView_Click"
                        IsTabStop="False"
                        ToolTipService.ToolTip="Hide Folder View"
                        UseSystemFocusVisuals="False">
                        <FontIcon
                            Width="39"
                            Height="39"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Glyph="&#xE8BB;" />
                    </Button>
                    <Button
                        x:Name="FolderViewOptions"
                        Width="39"
                        Height="39"
                        Margin="0,5,0,0"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        IsTabStop="False"
                        ToolTipService.ToolTip="Folder View Options"
                        UseSystemFocusVisuals="False">
                        <FontIcon
                            Width="39"
                            Height="39"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Glyph="&#xE972;" />
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout Placement="BottomEdgeAlignedRight">
                                <RadioMenuFlyoutItem Text="Open Virtual Machines" UseSystemFocusVisuals="False" />
                                <RadioMenuFlyoutItem
                                    IsChecked="True"
                                    Text="Folder View Virtual Machines"
                                    UseSystemFocusVisuals="False" />
                            </MenuFlyout>
                        </FlyoutBase.AttachedFlyout>
                    </Button>
                </StackPanel>
            </Grid>
            <Border
                Height="32"
                VerticalAlignment="Bottom"
                BackgroundSizing="OuterBorderEdge"
                BorderBrush="{StaticResource ControlStrokeColorSecondaryBrush}"
                BorderThickness="0,1,0,0">
                <StackPanel
                    Height="32"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="MessageLogButton"
                        Width="38"
                        Height="32"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        IsTabStop="False"
                        RightTapped="Button_RightTapped"
                        Tapped="Button_Tapped"
                        ToolTipService.ToolTip="Message log: no messages"
                        UseSystemFocusVisuals="False">
                        <FontIcon
                            Width="46"
                            Height="32"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Glyph="&#xE15F;" />
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout Placement="TopEdgeAlignedRight">
                                <MenuFlyoutItem
                                    HorizontalAlignment="Stretch"
                                    Click="MessageLog_Click"
                                    IsTabStop="False"
                                    Text="Open Message Log"
                                    UseSystemFocusVisuals="False" />
                                <MenuFlyoutItem
                                    HorizontalAlignment="Stretch"
                                    IsTabStop="False"
                                    Text="Clear Messages"
                                    UseSystemFocusVisuals="False" />
                            </MenuFlyout>
                        </FlyoutBase.AttachedFlyout>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Page>
</winex:WindowEx>
